# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=event_planner_ticket_generator
DB_USER=postgres
DB_PASSWORD=postgres

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3000
AUTH_SERVICE_TOKEN=your_auth_service_token

# JWT Configuration
JWT_SECRET=your_jwt_secret_for_validation

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# QR Code Configuration
QR_CODE_SIZE=200
QR_CODE_MARGIN=1
QR_CODE_COLOR_DARK=#000000
QR_CODE_COLOR_LIGHT=#FFFFFF

# PDF Configuration
PDF_MARGIN=50
PDF_HEADER_HEIGHT=80
PDF_FOOTER_HEIGHT=40
PDF_FONT_SIZE=12

# Security
TICKET_SIGNATURE_SECRET=your_ticket_signature_secret_32_chars
TICKET_EXPIRY_HOURS=24

# File Storage
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379/2
QUEUE_DEFAULT_JOB_OPTIONS_REMOVE_ON_COMPLETE=10
QUEUE_CONCURRENCY=5

# API Keys
API_KEY=your_ticket_generator_api_key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9094
