{
  "info": {
    "name": "Ticket Generator Service API - COMPLETE",
    "description": "Complete API collection for Ticket Generator Service with all 20 routes implemented",
    "version": "3.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "{{baseUrl}}",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "{{authToken}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "QR Code Generation",
      "item": [
        {
          "name": "Generate QR Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketCode\": \"TICKET_123456\",\n  \"ticketId\": \"{{testTicketId}}\",\n  \"eventId\": \"{{testEventId}}\",\n  \"format\": \"base64\",\n  \"size\": \"medium\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/qr/generate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "qr", "generate"]
            },
            "description": "Generate QR code for a ticket (requires tickets.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Ticket QR Code",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{testTicketId}}/qr",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{testTicketId}}", "qr"]
            },
            "description": "Get QR code for a specific ticket (requires tickets.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Ticket Generation",
      "item": [
        {
          "name": "Generate Single Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{testEventId}}\",\n  \"ticketType\": \"standard\",\n  \"attendeeInfo\": {\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+33612345678\",\n    \"address\": {\n      \"street\": \"123 Main St\",\n      \"city\": \"Paris\",\n      \"country\": \"France\",\n      \"postalCode\": \"75001\"\n    }\n  },\n  \"ticketOptions\": {\n    \"qrFormat\": \"base64\",\n    \"qrSize\": \"medium\",\n    \"pdfFormat\": true,\n    \"includeLogo\": false,\n    \"customFields\": {\n      \"seatNumber\": \"A12\",\n      \"gate\": \"Main Entrance\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/generate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "generate"]
            },
            "description": "Generate a single ticket (requires tickets.create permission)"
          },
          "response": []
        },
        {
          "name": "Generate Batch Tickets",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{testEventId}}\",\n  \"tickets\": [\n    {\n      \"ticketType\": \"standard\",\n      \"attendeeInfo\": {\n        \"name\": \"John Doe\",\n        \"email\": \"john.doe@example.com\",\n        \"phone\": \"+33612345678\"\n      }\n    },\n    {\n      \"ticketType\": \"vip\",\n      \"attendeeInfo\": {\n        \"name\": \"Jane Smith\",\n        \"email\": \"jane.smith@example.com\",\n        \"phone\": \"+33698765432\"\n      }\n    }\n  ],\n  \"ticketOptions\": {\n    \"qrFormat\": \"base64\",\n    \"qrSize\": \"medium\",\n    \"pdfFormat\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/batch",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "batch"]
            },
            "description": "Generate tickets in batch (requires tickets.batch.create permission)"
          },
          "response": []
        },
        {
          "name": "Validate Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketId\": \"{{testTicketId}}\",\n  \"validationCode\": \"VALID_123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/validate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "validate"]
            },
            "description": "Validate a ticket (requires tickets.validate permission)"
          },
          "response": []
        },
        {
          "name": "Get Ticket Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{testTicketId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{testTicketId}}"]
            },
            "description": "Get ticket details by ID (requires tickets.read permission)"
          },
          "response": []
        },
        {
          "name": "Get Event Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/event/{{testEventId}}?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "event", "{{testEventId}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Items per page"
                }
              ]
            },
            "description": "Get tickets for an event (requires tickets.read permission)"
          },
          "response": []
        },
        {
          "name": "Regenerate Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Damaged ticket replacement\",\n  \"regenerateOptions\": {\n    \"qrFormat\": \"base64\",\n    \"qrSize\": \"medium\",\n    \"pdfFormat\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/{{testTicketId}}/regenerate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{testTicketId}}", "regenerate"]
            },
            "description": "Regenerate a ticket (requires tickets.update permission)"
          },
          "response": []
        },
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{testTicketId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{testTicketId}}"]
            },
            "description": "Delete a ticket (requires tickets.delete permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "PDF Generation",
      "item": [
        {
          "name": "Generate PDF",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketId\": \"{{testTicketId}}\",\n  \"templateId\": \"{{testTemplateId}}\",\n  \"options\": {\n    \"format\": \"base64\",\n    \"includeQR\": true,\n    \"includeLogo\": false,\n    \"customFields\": {\n      \"seatNumber\": \"A12\",\n      \"gate\": \"Main Entrance\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/pdf",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "pdf"]
            },
            "description": "Generate PDF for a ticket (requires tickets.pdf.create permission)"
          },
          "response": []
        },
        {
          "name": "Generate Batch PDFs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketIds\": [\"{{testTicketId}}_1\", \"{{testTicketId}}_2\"],\n  \"templateId\": \"{{testTemplateId}}\",\n  \"options\": {\n    \"format\": \"base64\",\n    \"includeQR\": true,\n    \"includeLogo\": false\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/batch-pdf",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "batch-pdf"]
            },
            "description": "Generate PDFs in batch (requires tickets.batch.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Ticket PDF",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{testTicketId}}/pdf",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{testTicketId}}", "pdf"]
            },
            "description": "Get PDF for a specific ticket (requires tickets.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Job Management",
      "item": [
        {
          "name": "Create Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobType\": \"batch_generation\",\n  \"parameters\": {\n    \"eventId\": \"{{testEventId}}\",\n    \"ticketCount\": 100,\n    \"ticketType\": \"standard\"\n  },\n  \"priority\": \"normal\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/jobs",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "jobs"]
            },
            "description": "Create a ticket generation job (requires tickets.jobs.create permission)"
          },
          "response": []
