        {
          "name": "Cancel Job",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/job/{{testJobId}}/cancel",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "job", "{{testJobId}}", "cancel"]
            },
            "description": "Cancel a job (requires tickets.jobs.cancel permission)"
          },
          "response": []
        },
        {
          "name": "List Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/jobs?page=1&limit=20&status=pending",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "jobs"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Items per page"
                },
                {
                  "key": "status",
                  "value": "pending",
                  "description": "Filter by status"
                }
              ]
            },
            "description": "List jobs with filters (requires tickets.jobs.read permission)"
          },
          "response": []
        }
      ]
    },
