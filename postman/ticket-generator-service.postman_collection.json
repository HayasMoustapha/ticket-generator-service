{
  "info": {
    "name": "Ticket Generator Service API",
    "description": "API collection for Ticket Generator Service with centralized security and validation",
    "version": "2.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3004",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "QR Code Generation",
      "item": [
        {
          "name": "Generate QR Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketCode\": \"TICKET_123456\",\n  \"ticketId\": \"{{ticket_id}}\",\n  \"eventId\": \"{{event_id}}\",\n  \"format\": \"base64\",\n  \"size\": \"medium\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/qr/generate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "qr", "generate"]
            },
            "description": "Generate QR code for a ticket (requires tickets.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Ticket QR Code",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{ticket_id}}/qr",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{ticket_id}}", "qr"]
            },
            "description": "Get QR code for a specific ticket (requires tickets.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Ticket Generation",
      "item": [
        {
          "name": "Generate Single Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventId\": \"{{event_id}}\",\n  \"ticketType\": \"standard\",\n  \"attendeeInfo\": {\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+33612345678\",\n    \"address\": {\n      \"street\": \"123 Main St\",\n      \"city\": \"Paris\",\n      \"country\": \"France\",\n      \"postalCode\": \"75001\"\n    }\n  },\n  \"ticketOptions\": {\n    \"qrFormat\": \"base64\",\n    \"qrSize\": \"medium\",\n    \"pdfFormat\": true,\n    \"includeLogo\": false,\n    \"customFields\": {\n      \"seatNumber\": \"A12\",\n      \"gate\": \"Main Entrance\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/generate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "generate"]
            },
            "description": "Generate a single ticket (requires tickets.create permission)"
          },
          "response": []
        },
        {
          "name": "Generate Batch Tickets",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tickets\": [\n    {\n      \"eventId\": \"{{event_id}}\",\n      \"ticketType\": \"standard\",\n      \"attendeeInfo\": {\n        \"name\": \"John Doe\",\n        \"email\": \"john.doe@example.com\",\n        \"phone\": \"+33612345678\"\n      }\n    },\n    {\n      \"eventId\": \"{{event_id}}\",\n      \"ticketType\": \"vip\",\n      \"attendeeInfo\": {\n        \"name\": \"Jane Smith\",\n        \"email\": \"jane.smith@example.com\",\n        \"phone\": \"+33687654321\"\n      }\n    }\n  ],\n  \"batchOptions\": {\n    \"qrFormat\": \"base64\",\n    \"qrSize\": \"medium\",\n    \"pdfFormat\": true,\n    \"includeLogo\": false,\n    \"parallelGeneration\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/batch",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "batch"]
            },
            "description": "Generate tickets in batch (requires tickets.batch.create permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "PDF Generation",
      "item": [
        {
          "name": "Generate PDF",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketId\": \"{{ticket_id}}\",\n  \"templateId\": \"standard_template\",\n  \"customFields\": {\n    \"eventName\": \"Tech Conference 2024\",\n    \"eventDate\": \"2024-06-15\",\n    \"eventLocation\": \"Paris, France\",\n    \"attendeeName\": \"John Doe\",\n    \"ticketType\": \"Standard\"\n  },\n  \"pdfOptions\": {\n    \"format\": \"A4\",\n    \"orientation\": \"portrait\",\n    \"includeWatermark\": false,\n    \"customTemplate\": false\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/pdf",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "pdf"]
            },
            "description": "Generate PDF for a ticket (requires tickets.pdf.create permission)"
          },
          "response": []
        },
        {
          "name": "Generate Batch PDF",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketIds\": [\"{{ticket_id_1}}\", \"{{ticket_id_2}}\", \"{{ticket_id_3}}\"],\n  \"templateId\": \"standard_template\",\n  \"batchOptions\": {\n    \"format\": \"A4\",\n    \"orientation\": \"portrait\",\n    \"includeWatermark\": false,\n    \"parallelGeneration\": true\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/batch-pdf",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "batch-pdf"]
            },
            "description": "Generate PDFs in batch (requires tickets.batch.create permission)"
          },
          "response": []
        },
        {
          "name": "Get Ticket PDF",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{ticket_id}}/pdf",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{ticket_id}}", "pdf"]
            },
            "description": "Get PDF for a specific ticket (requires tickets.read permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Ticket Validation",
      "item": [
        {
          "name": "Validate Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ticketCode\": \"TICKET_123456\",\n  \"ticketId\": \"{{ticket_id}}\",\n  \"eventId\": \"{{event_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/validate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "validate"]
            },
            "description": "Validate a ticket (requires tickets.validate permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Ticket Management",
      "item": [
        {
          "name": "Get Ticket Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{ticket_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{ticket_id}}"]
            },
            "description": "Get ticket details by ID (requires tickets.read permission)"
          },
          "response": []
        },
        {
          "name": "Get Event Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/event/{{event_id}}?page=1&limit=20&status=generated",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "event", "{{event_id}}"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "20",
                  "description": "Items per page"
                },
                {
                  "key": "status",
                  "value": "generated",
                  "description": "Filter by status (pending, generated, used, expired)"
                }
              ]
            },
            "description": "Get tickets for a specific event (requires tickets.read permission)"
          },
          "response": []
        },
        {
          "name": "Regenerate Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Customer request for updated ticket\",\n  \"regenerateQR\": true,\n  \"regeneratePDF\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/{{ticket_id}}/regenerate",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{ticket_id}}", "regenerate"]
            },
            "description": "Regenerate a ticket (requires tickets.update permission)"
          },
          "response": []
        },
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tickets/{{ticket_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "{{ticket_id}}"]
            },
            "description": "Delete a ticket (requires tickets.delete permission)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Basic health check (no authentication required)"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-refresh token if needed",
          "if (pm.collectionVariables.get('auth_token') === 'your_jwt_token_here') {",
          "    pm.collectionVariables.set('auth_token', 'your_real_jwt_token');",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}
