  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Auto-refresh token if expired",
          "if (pm.collectionVariables.get('authToken') === 'your_jwt_token_here') {",
          "    pm.collectionVariables.set('authToken', 'your_real_jwt_token');",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
