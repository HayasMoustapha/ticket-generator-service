          "name": "Process Job",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/tickets/jobs/{{testJobId}}/process",
              "host": ["{{base_url}}"],
              "path": ["api", "tickets", "jobs", "{{testJobId}}", "process"]
